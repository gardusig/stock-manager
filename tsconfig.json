{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}